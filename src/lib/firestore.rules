
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is an Admin of a specific department
    function isAdminOfDepartment(department) {
      return request.auth != null && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department == department;
    }

    // STUDENT PROFILE RULES
    match /students/{userId} {
      // A user can read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // An admin can read student profiles in their department
      allow get, list: if request.auth != null && isAdminOfDepartment(resource.data.department);
    }
    
    // TEACHER PROFILE RULES
    match /teachers/{userId} {
      // A user can read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // An admin can read teacher profiles in their department
      allow get, list: if request.auth != null && isAdminOfDepartment(resource.data.department);
    }
    
    // ADMIN PROFILE RULES
    match /admins/{userId} {
      // An admin can read/write their own profile
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // CLASS RULES
    match /classes/{classId} {
      // Any authenticated user can view class lists (e.g., students finding their classes)
      // Admins can also list classes belonging to their department
      allow get, list: if request.auth != null;
      
      // Teachers can create classes
      allow create: if request.auth != null;
      
      // Only the assigned teacher can update/delete their own class
      allow update, delete: if request.auth != null && resource.data.teacherId == request.auth.uid;

      // ATTENDANCE SUBCOLLECTION RULES
      match /attendance/{date}/records/{studentId} {
        // Students can create their own attendance record.
        allow create: if request.auth != null && request.auth.uid == studentId;

        // A student can read their OWN record.
        // A teacher can read ALL records for their class.
        // An admin can read records for a class in their department.
        allow read: if request.auth != null && 
                    (request.auth.uid == studentId || 
                     get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid ||
                     isAdminOfDepartment(get(/databases/$(database)/documents/classes/$(classId)).data.department));

        // A teacher or an admin can list ALL records for a class (in their department).
        allow list: if request.auth != null && 
                    (get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid ||
                     isAdminOfDepartment(get(/databases/$(database)/documents/classes/$(classId)).data.department));
      }
    }
  }
}
