rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isStudent() {
      return isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    function isTeacher() {
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getAdminDepartment() {
      return get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department;
    }

    // Profile Rules: Users can manage their own profile. Admins can read profiles in their department.
    match /students/{studentId} {
      allow read, write: if isOwner(studentId);
      allow read: if isAdmin() && resource.data.department == getAdminDepartment();
    }
    match /teachers/{teacherId} {
      allow read, write: if isOwner(teacherId);
      allow read: if isAdmin() && resource.data.department == getAdminDepartment();
    }
    match /admins/{adminId} {
      allow read, write: if isOwner(adminId);
    }

    // Class Rules
    match /classes/{classId} {
        // Any signed-in user can read class details.
        allow get: if isSignedIn();
        
        // Teachers and Admins can list classes in their department.
        allow list: if (isTeacher() && get(/databases/$(database)/documents/teachers/$(request.auth.uid)).data.department == resource.data.department) || 
                      (isAdmin() && getAdminDepartment() == resource.data.department);

        // Teachers can create classes.
        allow create: if isTeacher();
        
        // The teacher who created the class can update or delete it.
        allow update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;

        // Attendance Subcollection Rules
        match /attendance/{date}/records/{recordId} {
          // Students can create their own attendance record.
          allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
          
          // Teacher of the class, student owner, or admin of the department can read a record.
          allow get, list: if (isTeacher() && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid) ||
                        (isStudent() && resource.data.studentId == request.auth.uid) ||
                        (isAdmin() && get(/databases/$(database)/documents/classes/$(classId)).data.department == getAdminDepartment());
        }
    }
    
    // Allow collection group query for a student's own records.
    match /{path=**}/records/{recordId} {
        allow get: if isStudent() && resource.data.studentId == request.auth.uid;
    }
  }
}
