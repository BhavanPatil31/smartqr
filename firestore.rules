rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get a user's department from their profile document
    function getUserDepartment(collectionName, uid) {
      return get(/databases/$(database)/documents/$(collectionName)/$(uid)).data.department;
    }

    // Students can read and write their own profile
    match /students/{studentId} {
      allow read, write: if isAuthenticated() && request.auth.uid == studentId;
    }

    // Teachers can read and write their own profile
    match /teachers/{teacherId} {
      allow read, write: if isAuthenticated() && request.auth.uid == teacherId;
    }
    
    // Admins can read and write their own profile
    match /admins/{adminId} {
      allow read, write: if isAuthenticated() && request.auth.uid == adminId;
    }
    
    // Admins can read lists of users/classes in their own department
    match /{collection}/{docId} {
       allow list: if isAuthenticated() 
                    && (collection == 'students' || collection == 'teachers' || collection == 'classes')
                    && getUserDepartment('admins', request.auth.uid) == request.query.where.value;
    }


    // Rules for classes
    match /classes/{classId} {
      allow create: if isAuthenticated(); // Teachers can create classes
      allow read: if isAuthenticated();   // Any authenticated user can read class info
      allow update: if isAuthenticated() && resource.data.teacherId == request.auth.uid; // Only the teacher of the class can update it
    }

    // Rules for attendance records
    match /classes/{classId}/attendance/{date}/records/{recordId} {
        // Students can create their own attendance record
        allow create: if isAuthenticated() && request.auth.uid == recordId;
        
        // Admins can read attendance for any class in their department
        allow read: if isAuthenticated() && getUserDepartment('admins', request.auth.uid) == get(/databases/$(database)/documents/classes/$(classId)).data.department;
    }
  }
}
