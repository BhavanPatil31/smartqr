rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles
    function isStudent() {
      return exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    function isTeacher() {
      return exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // STUDENT PROFILES: Students can read/write their own profile. Admins can read student profiles in their department.
    match /students/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow read: if isAdmin() && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department == resource.data.department;
    }
    
    // TEACHER PROFILES: Teachers can read/write their own profile. Admins can read teacher profiles in their department.
    match /teachers/{userId} {
      allow read, write: if request.auth.uid == userId;
      allow read: if isAdmin() && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department == resource.data.department;
    }

    // ADMIN PROFILES: Admins can read/write their own profile.
    match /admins/{userId} {
       allow read, write: if request.auth.uid == userId;
    }

    // CLASSES: Teachers can create classes. Authenticated users can read class details. Teachers/Admins can read classes in their department.
    match /classes/{classId} {
      allow create: if isTeacher();
      allow read: if request.auth != null;
      allow list: if (isTeacher() && get(/databases/$(database)/documents/teachers/$(request.auth.uid)).data.department == resource.data.department) || (isAdmin() && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department == resource.data.department);
      
      // ATTENDANCE SUBCOLLECTION
      // This path represents the date document, e.g., /attendance/2024-01-01
      match /attendance/{date} {
        allow read, write: if true; // Allows creation of date documents

        // ATTENDANCE RECORDS: Students can create their own record. Teachers of the class and Admins of the department can read records.
        match /records/{recordId} {
          allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
          allow read, list: if (isTeacher() && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid) || (isAdmin() && get(/databases/$(database)/documents/classes/$(classId)).data.department == get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department);
        }
      }
    }
    
    // Allow collection group query for a student's own records
    match /{path=**}/records/{recordId} {
        allow read: if isStudent() && resource.data.studentId == request.auth.uid;
    }
  }
}
