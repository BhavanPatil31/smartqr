
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isStudentInDepartment(department) {
      return exists(/databases/$(database)/documents/students/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/students/$(request.auth.uid)).data.department == department;
    }

    function isTeacherForClass(classId) {
      return get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid;
    }

    function isAdminForDepartment(department) {
        return exists(/databases/$(database)/documents/admins/$(request.auth.uid)) &&
               get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department == department;
    }

    match /classes/{classId} {
      // Allow any authenticated user to list classes (for dashboard queries)
      allow list: if request.auth != null;
      // Allow get if user is teacher, or admin/student of that department
      allow get: if request.auth != null && 
                    (isTeacherForClass(classId) || 
                     isAdminForDepartment(resource.data.department) ||
                     isStudentInDepartment(resource.data.department));

      allow write: if isTeacherForClass(classId);

      match /attendance/{date}/records/{recordId} {
        allow read: if isTeacherForClass(classId) || isAdminForDepartment(get(/databases/$(database)/documents/classes/$(classId)).data.department);
        allow create: if request.auth.uid == recordId;
        allow update, delete: if isTeacherForClass(classId);
      }
    }

    match /students/{studentId} {
      allow read, write: if request.auth.uid == studentId;
      // Admins can view students in their department
      allow get: if isAdminForDepartment(resource.data.department);
    }
    
    match /teachers/{teacherId} {
      allow read, write: if request.auth.uid == teacherId;
      // Admins can view teachers in their department
      allow get: if isAdminForDepartment(resource.data.department);
    }

    match /admins/{adminId} {
      allow read, write: if request.auth.uid == adminId;
    }
  }
}
