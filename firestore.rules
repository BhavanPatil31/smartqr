rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to determine user roles and permissions.
    function isSignedIn() {
      return request.auth != null;
    }
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    function isStudent() {
      return isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }
    function isTeacher() {
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    function getStudentData() {
      return get(/databases/$(database)/documents/students/$(request.auth.uid)).data;
    }
    function getTeacherData() {
      return get(/databases/$(database)/documents/teachers/$(request.auth.uid)).data;
    }
    function getAdminData() {
      return get(/databases/$(database)/documents/admins/$(request.auth.uid)).data;
    }

    // Profile Rules: Users can read/write their own profiles.
    match /students/{studentId} {
      allow read, write: if isOwner(studentId);
    }
    match /teachers/{teacherId} {
      allow read, write: if isOwner(teacherId);
    }
    match /admins/{adminId} {
      allow read, write: if isOwner(adminId);
    }

    // Class and Attendance Rules
    match /classes/{classId} {
      // Teachers can create classes.
      allow create: if isTeacher();
      
      // Teachers can read, update, and delete classes they are assigned to.
      // Admins can read, update, and delete classes in their department.
      // Students can read classes they are enrolled in.
      allow read, update, delete: if (isTeacher() && resource.data.teacherId == request.auth.uid) ||
                                     (isAdmin() && resource.data.department == getAdminData().department) ||
                                     (isStudent() && resource.data.department == getStudentData().department && resource.data.semester == getStudentData().semester);
                                     
      // Any signed-in user can list classes. This is necessary for server-side functions
      // that need to query for classes based on student/admin department.
      allow list: if isSignedIn();

      // Attendance Subcollection Rules
      match /attendance/{date}/records/{recordId} {
          // A student can create their own attendance record.
          allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;

          // The class teacher and department admin can read attendance records.
          allow read: if (isTeacher() && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid) ||
                        (isAdmin() && get(/databases/$(database)/documents/classes/$(classId)).data.department == getAdminData().department);
      }
    }
    
    // Collection Group Query Rule for a student's own records.
    match /{path=**}/records/{recordId} {
      allow read: if isStudent() && resource.data.studentId == request.auth.uid;
    }
  }
}
