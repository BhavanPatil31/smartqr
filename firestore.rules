rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isStudent() {
      return isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    function isTeacher() {
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Profile Rules
    match /students/{studentId} {
      allow read, write: if isOwner(studentId);
    }
    match /teachers/{teacherId} {
      allow read, write: if isOwner(teacherId);
    }
    match /admins/{adminId} {
        allow read, write: if isOwner(adminId);
    }

    // Class Rules
    match /classes/{classId} {
        // Students can read classes in their department and semester
        allow read: if isStudent() && 
                    resource.data.department == get(/databases/$(database)/documents/students/$(request.auth.uid)).data.department && 
                    resource.data.semester == get(/databases/$(database)/documents/students/$(request.auth.uid)).data.semester;
        
        // Teachers can create classes and read/update/delete their own classes
        allow create: if isTeacher();
        allow read, update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
        
        // Admins can read classes in their department
        allow read: if isAdmin() && resource.data.department == get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department;

        // Attendance Record Rules (nested)
        match /attendance/{date}/records/{recordId} {
             // A student can create their own attendance record if they are enrolled in the class.
            allow create: if isStudent() &&
                            request.auth.uid == request.resource.data.studentId &&
                            get(/databases/$(database)/documents/classes/$(classId)).data.department == get(/databases/$(database)/documents/students/$(request.auth.uid)).data.department &&
                            get(/databases/$(database)/documents/classes/$(classId)).data.semester == get(/databases/$(database)/documents/students/$(request.auth.uid)).data.semester;
            
            // Allow authenticated users to read records if they are the student, the teacher of the class, or an admin of the department.
            allow read: if (isStudent() && request.auth.uid == resource.data.studentId) ||
                          (isTeacher() && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid) ||
                          (isAdmin() && get(/databases/$(database)/documents/classes/$(classId)).data.department == get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department);
        }
    }
  }
}
