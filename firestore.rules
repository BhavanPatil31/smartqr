rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isStudent() {
      return isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    function isTeacher() {
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getRequestingUserData(role) {
      return get(/databases/$(database)/documents/$(role)/$(request.auth.uid)).data;
    }

    // Profile Rules: Users can manage their own profile.
    match /students/{studentId} {
      allow read, write: if isOwner(studentId);
    }
    match /teachers/{teacherId} {
      allow read, write: if isOwner(teacherId);
    }
    match /admins/{adminId} {
      allow read, write: if isOwner(adminId);
    }

    // Class Rules
    match /classes/{classId} {
        // Teachers can create classes.
        allow create: if isTeacher();

        // The assigned teacher of a class has full read/write permissions.
        // Admins of the same department have full read/write permissions.
        // Students can read classes that match their profile's department and semester.
        allow read, write: if (isTeacher() && resource.data.teacherId == request.auth.uid) ||
                              (isAdmin() && resource.data.department == getRequestingUserData('admins').department);
        
        allow list: if isStudent() && request.query.where.department == getRequestingUserData('students').department && request.query.where.semester == getRequestingUserData('students').semester;

        // Attendance Subcollection Rules
        match /attendance/{date}/records/{recordId} {
          // A student can create their own attendance record.
          allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
          
          // The class teacher, department admin, or the student who owns the record can read it.
          allow read: if (isStudent() && resource.data.studentId == request.auth.uid) ||
                        (isTeacher() && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid) ||
                        (isAdmin() && get(/databases/$(database)/documents/classes/$(classId)).data.department == getRequestingUserData('admins').department);
        }
    }
    
    // Allow collection group query for a student's own records.
    match /{path=**}/records/{recordId} {
        allow read: if isStudent() && resource.data.studentId == request.auth.uid;
    }
  }
}
