
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isStudent() {
      return exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }
    function isTeacher() {
      return exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    function getStudentDept() {
      return get(/databases/$(database)/documents/students/$(request.auth.uid)).data.department;
    }
    function getStudentSemester() {
      return get(/databases/$(database)/documents/students/$(request.auth.uid)).data.semester;
    }
     function getAdminDept() {
      return get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department;
    }

    // Profiles
    match /students/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /teachers/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
     match /admins/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Classes
    match /classes/{classId} {
      // Students can read classes that match their department and semester
      allow read: if isStudent() && resource.data.department == getStudentDept() && resource.data.semester == getStudentSemester();
      // Teachers can read/write their own classes
      allow read, create, update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
      // Admins can read classes in their department
      allow read: if isAdmin() && resource.data.department == getAdminDept();
    }
    
    // Attendance Records
    // Using a recursive wildcard to match subcollections
    match /classes/{classId}/attendance/{date}/records/{recordId} {
      // Students can create their own attendance record if it's for them.
      allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
      // Teachers can read records for their classes.
      allow read: if isTeacher() && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid;
       // Admins can read records for their department's classes
      allow read: if isAdmin() && get(/databases/$(database)/documents/classes/$(classId)).data.department == getAdminDept();
    }
    
    // Collection group query for records
    match /{path=**}/records/{recordId} {
      // Allow students to read their own attendance records across all classes.
      allow read: if isStudent() && resource.data.studentId == request.auth.uid;
    }
  }
}
