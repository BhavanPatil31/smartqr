rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the requesting user is an Admin of a given department
    function isAdmin(department) {
      return get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department == department;
    }

    // PROFILE RULES: Users can only read and write their own profile document.
    match /students/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /teachers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // CLASS & ATTENDANCE RULES
    match /classes/{classId} {
      // Any authenticated user can read class information.
      // List operations are secured by queries in the application code.
      allow get, list: if request.auth != null;
      
      // Only authenticated teachers can create classes.
      allow create: if request.auth != null;

      // Only the assigned teacher can update or delete their own class.
      allow update, delete: if request.auth != null && resource.data.teacherId == request.auth.uid;

      // ATTENDANCE SUBCOLLECTION RULES
      match /attendance/{date}/records/{studentId} {
        // Students can create their own attendance record.
        allow create: if request.auth != null && request.auth.uid == studentId;
        
        // Students can read their own record.
        // Teachers can read records for their own classes.
        // Admins can read records for classes in their department.
        allow read: if request.auth != null && (
          request.auth.uid == studentId ||
          get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid ||
          isAdmin(get(/databases/$(database)/documents/classes/$(classId)).data.department)
        );

        // Teachers and Admins can list all records for classes they have access to.
        allow list: if request.auth != null && (
          get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid ||
          isAdmin(get(/databases/$(database)/documents/classes/$(classId)).data.department)
        );
      }
    }
  }
}
