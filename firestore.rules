
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of a document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Helper function to get a user's role and department data
    function getUserData(userType) {
        return get(/databases/$(database)/documents/$(userType)/$(request.auth.uid)).data;
    }
    
    // Profile Rules: Users can only access and modify their own profiles.
    match /students/{studentId} {
      allow read, update, create: if isAuthenticated() && isOwner(studentId);
    }

    match /teachers/{teacherId} {
      allow read, update, create: if isAuthenticated() && isOwner(teacherId);
    }
    
    match /admins/{adminId} {
        allow read, update, create: if isAuthenticated() && isOwner(adminId);
    }

    // Class Rules
    match /classes/{classId} {
      // Teachers can create, read, and update classes they own.
      allow create: if isAuthenticated() && request.resource.data.teacherId == request.auth.uid;
      allow read, update: if isAuthenticated() && get(path).data.teacherId == request.auth.uid;
      
      // Students can read classes that match their profile's department and semester.
      allow get: if isAuthenticated(); // Allow single doc reads for navigation
      allow list: if isAuthenticated() && 
                   request.query.department == getUserData('students').department && 
                   request.query.semester == getUserData('students').semester;
                   
      // Admins can read all classes within their department.
      allow list: if isAuthenticated() && 
                    request.query.department == getUserData('admins').department;
    }
    
    // Attendance Record Rules
    match /classes/{classId}/attendance/{date}/records/{recordId} {
        // Students can create their own attendance record (document ID must be their UID).
        allow create: if isAuthenticated() && isOwner(recordId);
        
        // Teachers of the class can read all attendance records for their class.
        // Admins of the department can read all records.
        // Students can read their own record.
        allow read: if isAuthenticated() && (
            get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid ||
            get(/databases/$(database)/documents/classes/$(classId)).data.department == getUserData('admins').department ||
            isOwner(recordId)
        );
        
        // No one can update or delete attendance records to maintain integrity.
        allow update, delete: if false;
    }

    // Rules for Collection Group Queries
    match /{path=**}/records/{recordId} {
        // Allow students to query the 'records' collection group for their own records.
        allow list: if isAuthenticated() && 
                     request.query.where[0][2] == request.auth.uid;
    }
  }
}
