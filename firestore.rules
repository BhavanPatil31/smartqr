rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // USER PROFILE RULES
    match /students/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /teachers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // CLASS RULES
    match /classes/{classId} {
      // Any authenticated user can read class information. 
      // Authorization is handled by specific queries in the app code.
      allow get, list: if request.auth != null;
      
      // Only authenticated users can create classes.
      allow create: if request.auth != null;

      // Only the assigned teacher can update or delete their own class.
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.teacherId;

      // ATTENDANCE SUBCOLLECTION
      match /attendance/{date}/records/{recordId} {
        // Students can create their own attendance records.
        allow create: if request.auth != null && request.auth.uid == recordId;

        // Teachers and Admins can read/list attendance for classes they are authorized to view.
        // This relies on the queries in the app being properly filtered.
        allow read, list: if request.auth != null;
      }
    }
  }
}
