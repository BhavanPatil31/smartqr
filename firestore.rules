
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to check user roles
    function isStudent() {
      return exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    function isTeacher() {
      return exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    
    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // STUDENT DATA: Allow students to manage their own profile
    match /students/{studentId} {
      allow read, update, create: if request.auth.uid == studentId;
    }

    // TEACHER DATA: Allow teachers to manage their own profile
    match /teachers/{teacherId} {
      allow read, update, create: if request.auth.uid == teacherId;
    }

    // ADMIN DATA: Allow admins to manage their own profile
    match /admins/{adminId} {
      allow read, update, create: if request.auth.uid == adminId;
    }

    // CLASSES
    match /classes/{classId} {
      // Teachers can create classes
      allow create: if isTeacher() && request.resource.data.teacherId == request.auth.uid;
      
      // Students can read class details if they are in the correct department/semester
      // Admins can read any class in their department
      // Teachers can read their own classes
      allow read: if (isStudent() && get(/databases/$(database)/documents/students/$(request.auth.uid)).data.department == resource.data.department && get(/databases/$(database)/documents/students/$(request.auth.uid)).data.semester == resource.data.semester)
                  || (isAdmin() && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department == resource.data.department)
                  || (isTeacher() && resource.data.teacherId == request.auth.uid);

      // Teachers can update their own classes
      allow update: if isTeacher() && resource.data.teacherId == request.auth.uid;
    }

    // ATTENDANCE RECORDS (Subcollection)
    match /classes/{classId}/attendance/{date}/records/{recordId} {
        // Students can create their own attendance record
        allow create: if isStudent() && recordId == request.auth.uid;
        
        // Teachers of the class or Admins of the department can read records
        allow read: if (isTeacher() && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid)
                    || (isAdmin() && get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department == get(/databases/$(database)/documents/classes/$(classId)).data.department);
    }
    
    // This is for the student history page to query all their records
    match /{path=**}/records/{recordId} {
      allow read: if isStudent() && resource.data.studentId == request.auth.uid;
    }
  }
}
