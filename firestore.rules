
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isStudent() {
      return isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    function isTeacher() {
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getStudentDept() {
      return get(/databases/$(database)/documents/students/$(request.auth.uid)).data.department;
    }
    
    function getStudentSemester() {
      return get(/databases/$(database)/documents/students/$(request.auth.uid)).data.semester;
    }
    
    function getAdminDept() {
      return get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department;
    }
    
    function getClass(classId) {
      return get(/databases/$(database)/documents/classes/$(classId));
    }

    // Profile Rules
    match /students/{studentId} {
      allow read, write: if isOwner(studentId);
    }
    match /teachers/{teacherId} {
      allow read, write: if isOwner(teacherId);
    }
    match /admins/{adminId} {
      allow read, write: if isOwner(adminId);
    }

    // Class Rules
    match /classes/{classId} {
      // Students can read classes in their department and semester
      allow read: if isStudent() && resource.data.department == getStudentDept() && resource.data.semester == getStudentSemester();
      
      // Teachers can create classes and read/update/delete their own classes
      allow create: if isTeacher();
      allow read, update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
      
      // Admins can read classes in their department
      allow read: if isAdmin() && resource.data.department == getAdminDept();
    }

    // Attendance Record Rules
    // This uses a collection group query, which requires a specific rule structure.
    match /{path=**}/records/{recordId} {
      // Allow read access for a collection group query if the request is for the user's own records.
      allow read: if request.auth.uid == resource.data.studentId;
      
      // A student can create their own attendance record if they are enrolled in the class.
      allow create: if isStudent() &&
                      request.auth.uid == request.resource.data.studentId &&
                      getClass(path[1]).data.department == getStudentDept() &&
                      getClass(path[1]).data.semester == getStudentSemester();

      // A teacher of a class can read all records for that class.
      // Admins of the department can also read the records.
      allow read: if (isTeacher() && getClass(path[1]).data.teacherId == request.auth.uid) ||
                    (isAdmin() && getClass(path[1]).data.department == getAdminDept());
    }
  }
}
