
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isStudent() {
      return isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    function isTeacher() {
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isEnrolledInClass(classDoc) {
      let studentProfile = get(/databases/$(database)/documents/students/$(request.auth.uid)).data;
      return classDoc.department == studentProfile.department && classDoc.semester == studentProfile.semester;
    }

    // Profile Rules
    match /students/{studentId} {
      allow read, write: if isOwner(studentId);
    }
    match /teachers/{teacherId} {
      allow read, write: if isOwner(teacherId);
    }
    match /admins/{adminId} {
      allow read, write: if isOwner(adminId);
    }

    // Class and Attendance Rules
    match /classes/{classId} {
      // Students can read classes they are enrolled in.
      allow read: if isStudent() && isEnrolledInClass(get(/databases/$(database)/documents/classes/$(classId)).data);
      
      // Teachers can create classes and manage their own.
      allow create: if isTeacher();
      allow read, update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
      
      // Admins can read classes in their department.
      allow read: if isAdmin() && resource.data.department == get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department;

      // Attendance sub-collection rules
      match /attendance/{date}/records/{recordId} {
        // A student can create their own attendance record if they are enrolled.
        allow create: if isStudent() && 
                        isOwner(request.resource.data.studentId) &&
                        isEnrolledInClass(get(/databases/$(database)/documents/classes/$(classId)).data);
        
        // A student can read their own attendance records.
        allow read: if isStudent() && isOwner(recordId);

        // A teacher of the class can read all records for that class.
        // Admins of the department can also read the records.
        allow read: if (isTeacher() && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid) ||
                      (isAdmin() && get(/databases/$(database)/documents/classes/$(classId)).data.department == get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department);
      }
    }
  }
}
