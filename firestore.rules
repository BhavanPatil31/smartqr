rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check the user's role and department from their profile
    function isUserInDepartment(collectionName, department) {
      return get(/databases/$(database)/documents/$(collectionName)/$(request.auth.uid)).data.department == department;
    }

    // PROFILE RULES: Users can read and write their OWN profile.
    match /students/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /teachers/{userId} {
      allow read, write: if request.auth.uid == userId;
    }
    match /admins/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // ADMIN DATA ACCESS RULES
    // Admins can list students/teachers/classes if the query is filtered by their department.
    match /students/{studentId} {
      allow list: if request.resource.data.department == get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department;
    }
     match /teachers/{teacherId} {
      allow list: if request.resource.data.department == get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department;
    }


    // CLASS RULES
    match /classes/{classId} {
      // Teachers can create classes.
      allow create: if request.auth.uid == request.resource.data.teacherId;

      // Logged-in users can read class details (e.g., student/teacher dashboards).
      allow get: if request.auth != null;
      
      // Admins can list classes filtered by their department.
      // Students/Teachers can list classes for their dashboards.
      allow list: if request.auth != null;

      // Only the assigned teacher can update or delete a class.
      allow update, delete: if request.auth.uid == resource.data.teacherId;

      // ATTENDANCE SUBCOLLECTION RULES
      match /attendance/{date}/records/{recordId} {
        // Students can create their own attendance record.
        allow create: if request.auth.uid == recordId;

        // Admins can view attendance for classes in their department.
        // The teacher of the class can view all attendance.
        // A student can view their own attendance record.
        allow get, list: if isUserInDepartment('admins', get(/databases/$(database)/documents/classes/$(classId)).data.department) ||
                           request.auth.uid == get(/databases/$(database)/documents/classes/$(classId)).data.teacherId ||
                           request.auth.uid == recordId;
      }
    }
  }
}
