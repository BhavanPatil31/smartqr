rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isStudent() {
      return isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    function isTeacher() {
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getStudentData() {
        return get(/databases/$(database)/documents/students/$(request.auth.uid)).data;
    }

    // Profile Rules
    match /students/{studentId} {
      // A student can read and write their own profile.
      allow read, write: if isOwner(studentId);
    }
    match /teachers/{teacherId} {
      // A teacher can read and write their own profile.
      allow read, write: if isOwner(teacherId);
    }
    match /admins/{adminId} {
      // An admin can read and write their own profile.
      allow read, write: if isOwner(adminId);
    }

    // Class Rules
    match /classes/{classId} {
        // A teacher can manage their own class.
        allow read, update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
        // A teacher can create a class.
        allow create: if isTeacher();
        
        // A student can read a class if it's for their department and semester.
        allow get: if isStudent();
        // A student can list classes relevant to them.
        allow list: if isStudent() 
                    && request.query.where.department == getStudentData().department 
                    && request.query.where.semester == getStudentData().semester;
        
        // Admins can read all class data (for now). A more granular rule can be added later.
        allow read: if isAdmin();

        // Attendance Subcollection Rules
        match /attendance/{date}/records/{recordId} {
          // A student can create their own attendance record.
          allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
          
          // The teacher of the class, the student who owns the record, or an admin can read.
          allow read: if (isTeacher() && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid) ||
                        (isStudent() && resource.data.studentId == request.auth.uid) ||
                        isAdmin();
        }
    }
    
    // Allow collection group query for a student's own records.
    match /{path=**}/records/{recordId} {
        allow read: if isStudent() && resource.data.studentId == request.auth.uid;
    }
  }
}
