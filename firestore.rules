rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isStudent() {
      return isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    function isTeacher() {
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getUserData(role) {
      return get(/databases/$(database)/documents/$(role)/$(request.auth.uid)).data;
    }

    // Profile Rules: Users can manage their own profile.
    match /students/{studentId} {
      allow read, write: if isOwner(studentId);
    }
    match /teachers/{teacherId} {
      allow read, write: if isOwner(teacherId);
    }
    match /admins/{adminId} {
      allow read, write: if isOwner(adminId);
    }

    // Class Rules
    match /classes/{classId} {
      // Students can read classes that match their profile's department and semester.
      allow get: if isStudent() && 
                   get(/databases/$(database)/documents/classes/$(classId)).data.department == getUserData('students').department &&
                   get(/databases/$(database)/documents/classes/$(classId)).data.semester == getUserData('students').semester;

      // Allow authenticated users to list classes. Client-side queries will filter them.
      allow list: if isSignedIn(); 
      
      // Teachers can create classes.
      allow create: if isTeacher();
      
      // The assigned teacher can read, update, and delete their own class.
      // Combining read and write access here is critical to solve the permission issue.
      allow read, write: if isTeacher() && resource.data.teacherId == request.auth.uid;
      
      // Admins can read and write any class in their department.
      allow read, write: if isAdmin() && resource.data.department == getUserData('admins').department;

      // Attendance Subcollection Rules
      match /attendance/{date}/records/{recordId} {
        // A student can create their own attendance record if they are enrolled in the class.
        allow create: if isStudent() &&
                      request.resource.data.studentId == request.auth.uid &&
                      get(/databases/$(database)/documents/classes/$(classId)).data.department == getUserData('students').department &&
                      get(/databases/$(database)/documents/classes/$(classId)).data.semester == getUserData('students').semester;
        
        // The teacher of the class, or an admin of the department can read attendance records.
        allow read: if (isTeacher() && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid) ||
                      (isAdmin() && get(/databases/$(database)/documents/classes/$(classId)).data.department == getUserData('admins').department);
      }
    }
    
    // Allow collection group query for a student's own records across all classes.
    match /{path=**}/records/{recordId} {
      allow list: if isStudent() && request.query.where.studentId == request.auth.uid;
    }
  }
}