rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function getRoleData(role) {
      return get(/databases/$(database)/documents/$(role)/$(request.auth.uid)).data;
    }

    function isStudent() {
      return isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    function isTeacher() {
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // STUDENT PROFILES: Students can read/write their own profile. Admins can read student profiles in their department.
    match /students/{userId} {
      allow read, write: if isOwner(userId);
      allow list, get: if isAdmin() && getRoleData('admins').department == resource.data.department;
    }
    
    // TEACHER PROFILES: Teachers can read/write their own profile. Admins can read teacher profiles in their department.
    match /teachers/{userId} {
      allow read, write: if isOwner(userId);
      allow list, get: if isAdmin() && getRoleData('admins').department == resource.data.department;
    }

    // ADMIN PROFILES: Admins can read/write their own profile.
    match /admins/{userId} {
       allow read, write: if isOwner(userId);
    }

    // CLASSES
    match /classes/{classId} {
      allow create: if isTeacher();
      allow read, update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
      
      // Students can read classes for their assigned department and semester
      allow read: if isStudent() && resource.data.department == getRoleData('students').department && resource.data.semester == getRoleData('students').semester;
      
      // Admins can read all classes in their department
      allow list, get: if isAdmin() && resource.data.department == getRoleData('admins').department;
      
      // ATTENDANCE SUBCOLLECTION
      match /attendance/{dateDoc} {
        // This path is for date documents like '2024-01-01', which hold records
        // Allow creation of date docs implicitly by allowing record creation.
        
        // ATTENDANCE RECORDS
        match /records/{recordId} {
          // A student can create their own attendance record.
          allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
          
          // The teacher of this class can read the attendance records.
          // An admin of the same department can read the attendance records.
          allow get, list: if (isTeacher() && resource.data.teacherId == request.auth.uid) ||
                              (isAdmin() && resource.data.department == getRoleData('admins').department);
        }
      }
    }
    
    // Allow collection group query for a student's own records
    match /{path=**}/records/{recordId} {
        allow read: if isStudent() && resource.data.studentId == request.auth.uid;
    }
  }
}
