rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isStudent(userId) {
      return isSignedIn() && exists(/databases/$(database)/documents/students/$(userId));
    }

    function isTeacher(userId) {
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(userId));
    }
    
    function isAdmin(userId) {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(userId));
    }

    // PROFILE RULES
    match /students/{studentId} {
      allow read, write: if isOwner(studentId);
    }
    match /teachers/{teacherId} {
      allow read, write: if isOwner(teacherId);
    }
    match /admins/{adminId} {
        allow read, write: if isOwner(adminId);
    }

    // DATA RULES (Accessed by server-side Genkit flows)
    // By default, we deny client-side access to these collections
    // and let the server actions handle data fetching with their admin credentials.
    // This is a more secure and robust pattern.
    match /classes/{classId} {
        allow read, write: if false;
    }
     match /teachers/{teacherId} {
        allow read: if false;
    }
     match /students/{studentId} {
        allow read: if false;
    }

    // ATTENDANCE SUBCOLLECTION RULES
    match /classes/{classId}/attendance/{date}/records/{recordId} {
      // Students can create their own attendance record.
      allow create: if isStudent(request.auth.uid) && isOwner(request.resource.data.studentId);
      // Deny all other client-side access. Let server flows handle reads.
      allow read, update, delete: if false;
    }

    // COLLECTION GROUP RULES for student's own history
    match /{path=**}/records/{recordId} {
      // Allow a student to read their own records via a collection group query.
      allow read: if isStudent(request.auth.uid) && resource.data.studentId == request.auth.uid;
    }
  }
}
