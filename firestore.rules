rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // PROFILE RULES
    match /students/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /teachers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // CLASS RULES
    match /classes/{classId} {
      // Allow any authenticated user to get or list classes.
      // We will rely on secure queries in the application code to filter them.
      allow get, list: if request.auth != null;

      // Only authenticated users can create classes.
      allow create: if request.auth != null;

      // Only the assigned teacher can update or delete their own class.
      allow update, delete: if request.auth != null && resource.data.teacherId == request.auth.uid;

      // ATTENDANCE SUBCOLLECTION RULES
      match /attendance/{date}/records/{studentId} {
        // A student can only create their own attendance record.
        allow create: if request.auth != null && request.auth.uid == studentId;
        
        // Only the student who owns the record can read it directly.
        // Teachers and Admins will use a secure backend flow to get lists of records.
        allow read: if request.auth != null && request.auth.uid == studentId;

        // No one is allowed to list the full sub-collection from the client.
        // This prevents data leakage and forces the use of the secure backend flow.
        allow list: if false;
      }
    }
  }
}
