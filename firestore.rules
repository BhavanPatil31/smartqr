
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isStudent() {
      return isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    function isTeacher() {
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getAdminDepartment() {
        return get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department;
    }
    
    function getStudent() {
        return get(/databases/$(database)/documents/students/$(request.auth.uid)).data;
    }
    
    function getClass(classId) {
        return get(/databases/$(database)/documents/classes/$(classId)).data;
    }

    // Profile Rules
    match /students/{studentId} {
      allow read, write: if isOwner(studentId);
      allow read: if isAdmin() && resource.data.department == getAdminDepartment();
    }
    match /teachers/{teacherId} {
      allow read, write: if isOwner(teacherId);
      allow read: if isAdmin() && resource.data.department == getAdminDepartment();
    }
    match /admins/{adminId} {
        allow read, write: if isOwner(adminId);
    }

    // Class Rules
    match /classes/{classId} {
        allow read: if isStudent() && resource.data.department == getStudent().department && resource.data.semester == getStudent().semester;
        allow create: if isTeacher();
        allow read, update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;
        allow read: if isAdmin() && resource.data.department == getAdminDepartment();
    }

    // Attendance Record Rules
    match /{path=**}/records/{recordId} {
        // A student can read their own attendance records via collection group query.
        allow read: if isOwner(resource.data.studentId);
        
        // A student can create their own attendance record if they are enrolled in the class.
        allow create: if isStudent() &&
                        isOwner(request.resource.data.studentId) &&
                        getClass(path[1]).department == getStudent().department &&
                        getClass(path[1]).semester == getStudent().semester;

        // A teacher of a class or an admin of the department can read all records for that class.
        allow read: if (isTeacher() && getClass(path[1]).teacherId == request.auth.uid) ||
                      (isAdmin() && getClass(path[1]).department == getAdminDepartment());
    }
  }
}
