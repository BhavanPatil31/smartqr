rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isStudent() {
      return isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    function isTeacher() {
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getAdminData() {
      return get(/databases/$(database)/documents/admins/$(request.auth.uid)).data;
    }
    
    function getStudentData() {
      // Use a let block for safety to avoid errors if a student profile is incomplete.
      let studentData = get(/databases/$(database)/documents/students/$(request.auth.uid)).data;
      return studentData;
    }

    // Profile Rules: Users can manage their own profile.
    match /students/{studentId} {
      // Student can read/write their own profile
      allow read, write: if isOwner(studentId);
      // Admins can read students in their department
      allow read: if isAdmin() && 'department' in getAdminData() && resource.data.department == getAdminData().department;
      // Teachers can read student profiles to send messages and view their students
      allow read, list: if isTeacher();

      // Document creation allowed for signed-in students (registration)
      allow create: if isSignedIn() && isOwner(studentId);
    }
    match /teachers/{teacherId} {
      // Teacher can read/write their own profile
      allow read: if isOwner(teacherId);
      // Allow teachers to edit their own profile and request approval
      allow update, delete: if isOwner(teacherId);

      // Admins can read teachers (relaxed for smoother admin ops)
      allow read: if isAdmin();

      // Admins can update teacher docs (e.g., approve). Keep simple to avoid false denials
      allow update: if isAdmin();

      // Document creation allowed for signed-in teachers (registration)
      allow create: if isSignedIn() && isOwner(teacherId);
    }
    match /admins/{adminId} {
      allow read, write: if isOwner(adminId);
    }

    // Settings Rules: Users can manage their own settings
    match /studentSettings/{studentId} {
      allow read, write: if request.auth != null && request.auth.uid == studentId;
    }
    match /teacherSettings/{teacherId} {
      allow read, write: if request.auth != null && request.auth.uid == teacherId;
    }
    match /adminSettings/{adminId} {
      allow read, write: if request.auth != null && request.auth.uid == adminId;
    }

    // Class Rules
    match /classes/{classId} {
      // Student Access: A student can read a class if their profile is complete and matches the class.
      allow get, list: if isStudent() &&
                         'department' in getStudentData() && 'semester' in getStudentData() &&
                         resource.data.department == getStudentData().department &&
                         resource.data.semester == getStudentData().semester;
      
      // Teacher Access: A teacher has full read/write access to a class they own.
      // This includes QR code generation and updates
      allow read, write: if isTeacher() && resource.data.teacherId == request.auth.uid;
      
      // Admin Access: Allow admins to read classes in their department; allow write as needed
      allow read: if isAdmin() && resource.data.department == getAdminData().department;
      allow update, delete: if isAdmin() && resource.data.department == getAdminData().department;

      // Class Creation: Any teacher can create a class.
      allow create: if isTeacher();
      
      // Listing Classes: Allow any signed-in user to list classes.
      // The application will filter these on the client-side based on the user's role and profile.
      allow list: if isSignedIn();
      
      // Server-side access: Allow server-side operations (for AI flows and server actions)
      // This allows unauthenticated server-side operations
      allow read: if request.auth == null;

      // Attendance Subcollection Rules
      match /attendance/{date} {
        // Allow teachers to list attendance collections for their classes (even if empty)
        allow read, list: if isTeacher() && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid;
        
        match /records/{recordId} {
          // Students can write their own attendance record
          allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
          
          // Students can read their own attendance record
          // Teachers can read attendance records for their class
          // Admins can read attendance records for classes in their department
          allow read, list: if (isStudent() && resource.data.studentId == request.auth.uid) ||
                              (isTeacher() && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid) ||
                              (isAdmin() && get(/databases/$(database)/documents/classes/$(classId)).data.department == getAdminData().department) ||
                              (request.auth == null); // Server-side access
        }
      }
    }

    // Allow collection group query for a student to read their own records across all classes.
    match /{path=**}/records/{recordId} {
        allow read, list: if isStudent() && resource.data.studentId == request.auth.uid;
    }
    
    // Allow teachers to read attendance records for their classes via collection group queries
    match /{path=**}/records/{recordId} {
        allow read, list: if isTeacher();
    }
    
    // Allow students to query attendance records in any class for their own records
    match /{path=**}/attendance/{date}/records/{recordId} {
        allow read, list: if isStudent() && resource.data.studentId == request.auth.uid;
    }
  }

  // Notifications Rules
  match /notifications/{notificationId} {
    // Students can read and list their own notifications
    allow read, list: if request.auth != null && resource.data.studentId == request.auth.uid;
    
    // Teachers can read notifications they created
    allow read, list: if request.auth != null && isTeacher() && resource.data.teacherId == request.auth.uid;
    
    // Students can update their own notifications (mark as read/unread)
    allow update: if request.auth != null && resource.data.studentId == request.auth.uid;
    
    // Teachers can create notifications for students - simplified permission
    allow create: if request.auth != null;
    
    // Students can delete their own notifications
    allow delete: if request.auth != null && resource.data.studentId == request.auth.uid;
  }

}
