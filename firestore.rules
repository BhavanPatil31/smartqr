rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isStudent() {
      return exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }
    
    function isTeacher() {
        return exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }

    function isAdmin() {
      return exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function getStudentData() {
        return get(/databases/$(database)/documents/students/$(request.auth.uid)).data;
    }
    
    function getTeacherData() {
        return get(/databases/$(database)/documents/teachers/$(request.auth.uid)).data;
    }
    
    function getAdminData() {
        return get(/databases/$(database)/documents/admins/$(request.auth.uid)).data;
    }

    // Profile Rules: Users can manage their own profiles.
    match /students/{studentId} {
      allow read, write: if isOwner(studentId);
    }
    match /teachers/{teacherId} {
      allow read, write: if isOwner(teacherId);
    }
    match /admins/{adminId} {
      allow read, write: if isOwner(adminId);
    }
    
    // Public Data: Allow any signed-in user to list teachers, students, and classes.
    // This is required for server-side functions (Genkit flows) to query data.
    // Client-side queries should add specific 'where' clauses for security.
    match /teachers/{teacherId} {
        allow list: if isSignedIn();
    }
    match /students/{studentId} {
        allow list: if isSignedIn();
    }

    // Class Rules
    match /classes/{classId} {
      // Teachers can create classes.
      allow create: if isTeacher();
      
      // Teachers can update, or delete classes they are assigned to.
      // Admins in the same department can also update or delete.
      allow update, delete: if (isTeacher() && resource.data.teacherId == request.auth.uid) ||
                              (isAdmin() && resource.data.department == getAdminData().department);
      
      // Allow read access for:
      // 1. The assigned teacher.
      // 2. Any admin in the same department.
      // 3. Any student enrolled in that class's department and semester.
      allow get: if (isTeacher() && resource.data.teacherId == request.auth.uid) ||
                   (isAdmin() && resource.data.department == getAdminData().department) ||
                   (isStudent() && resource.data.department == getStudentData().department && resource.data.semester == getStudentData().semester);

      // Any signed-in user can list classes. This is necessary for flows.
      allow list: if isSignedIn();

      // Attendance Subcollection Rules
      match /attendance/{date}/records/{recordId} {
        // A student can create their own attendance record if they are enrolled in the class.
        // We get the class data from the path to check enrollment.
        allow create: if isStudent() && 
                        request.resource.data.studentId == request.auth.uid &&
                        get(/databases/$(database)/documents/classes/$(classId)).data.department == getStudentData().department &&
                        get(/databases/$(database)/documents/classes/$(classId)).data.semester == getStudentData().semester;
                        
        // Allow reads for the assigned teacher and relevant admin.
        allow read: if (isTeacher() && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid) ||
                      (isAdmin() && get(/databases/$(database)/documents/classes/$(classId)).data.department == getAdminData().department);
      }
    }
    
    // Collection Group Query for a student's own records across all classes.
    match /{path=**}/records/{recordId} {
      allow read: if isStudent() && resource.data.studentId == request.auth.uid;
    }
  }
}
