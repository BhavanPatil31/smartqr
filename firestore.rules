rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData(role) {
      return get(/databases/$(database)/documents/$(role)/$(request.auth.uid)).data;
    }

    // Profile Rules: Users can manage their own profiles.
    match /students/{studentId} {
      allow read, write: if isOwner(studentId);
    }
    match /teachers/{teacherId} {
      allow read, write: if isOwner(teacherId);
    }
    match /admins/{adminId} {
      allow read, write: if isOwner(adminId);
    }
    
    // Class Rules
    match /classes/{classId} {
      // Teachers can create classes.
      allow create: if isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));

      // Teachers can read, update, and delete classes they own. Admins can manage classes in their department.
      allow read, update, delete: if (isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid)) && resource.data.teacherId == request.auth.uid) ||
                                 (isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid)) && resource.data.department == getUserData('admins').department);
      
      // Students can list classes matching their department and semester.
      allow list: if isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid)) &&
                  request.query.where.department == getUserData('students').department &&
                  request.query.where.semester == getUserData('students').semester;
                  
      // Allow read for any signed in user to support various lookups.
      allow get: if isSignedIn();

      // Attendance Sub-collection Rules
      match /attendance/{date}/records/{recordId} {
        // Students can create their own attendance records.
        allow create: if isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid)) && request.resource.data.studentId == request.auth.uid;
        
        // Teachers, the specific student, and admins can read attendance records.
        allow read: if (isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid)) && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid) ||
                      (isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid)) && resource.data.studentId == request.auth.uid) ||
                      (isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid)) && get(/databases/$(database)/documents/classes/$(classId)).data.department == getUserData('admins').department);
      }
    }
    
    // Allow collection group query for a student's own records. This is vital for stats and history.
    match /{path=**}/records/{recordId} {
      allow read: if isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid)) && resource.data.studentId == request.auth.uid;
    }
  }
}
