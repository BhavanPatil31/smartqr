rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isRole(role) {
      return isSignedIn() && exists(/databases/$(database)/documents/$(role)/$(request.auth.uid));
    }
    
    function getUserData(role) {
      return get(/databases/$(database)/documents/$(role)/$(request.auth.uid)).data;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Profile Rules: Users can only manage their own profile.
    match /students/{studentId} {
      allow read, write: if isOwner(studentId);
    }
    match /teachers/{teacherId} {
      allow read, write: if isOwner(teacherId);
    }
    match /admins/{adminId} {
      allow read, write: if isOwner(adminId);
    }

    // Class Rules
    match /classes/{classId} {
      // READ: 
      // - Any teacher/admin can view any class details.
      // - A student can view a class if it matches their department and semester.
      allow get: if isRole('teachers') || isRole('admins') || 
                   (isRole('students') && resource.data.department == getUserData('students').department && resource.data.semester == getUserData('students').semester);

      // LIST:
      // - Students can query for classes matching their profile.
      // - Teachers can query for their own classes.
      // - Admins can query for classes in their department.
      allow list: if (isRole('students') && request.query.where.department == getUserData('students').department && request.query.where.semester == getUserData('students').semester) ||
                     (isRole('teachers') && request.query.where.teacherId == request.auth.uid) ||
                     (isRole('admins') && request.query.where.department == getUserData('admins').department);

      // WRITE:
      // - A teacher can create a new class.
      allow create: if isRole('teachers');
      
      // - A teacher who owns the class can update or delete it.
      // - An admin can update or delete classes in their department.
      // - Prevent teacherId from being changed on update.
      allow update, delete: if (isRole('teachers') && resource.data.teacherId == request.auth.uid && request.resource.data.teacherId == resource.data.teacherId) ||
                              (isRole('admins') && resource.data.department == getUserData('admins').department);
      
      // Attendance Subcollection
      match /attendance/{date}/records/{recordId} {
        // Any signed-in user can read attendance records (teachers/admins need this).
        allow read: if isSignedIn();
        
        // A student can create their own attendance record.
        allow create: if isRole('students') && request.resource.data.studentId == request.auth.uid;
      }
    }

    // Collection Group query for a student's own attendance records.
    match /{path=**}/records/{recordId} {
      allow read: if isRole('students') && resource.data.studentId == request.auth.uid;
    }
  }
}
