rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Helper Functions ---
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isStudent() {
      return isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    function isTeacher() {
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function getAdminDepartment() {
      return get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department;
    }

    // --- Profile Rules ---
    match /students/{studentId} {
      allow read, write: if isOwner(studentId);
      allow read: if isAdmin() && resource.data.department == getAdminDepartment();
    }
    match /teachers/{teacherId} {
      allow read, write: if isOwner(teacherId);
      allow read: if isAdmin() && resource.data.department == getAdminDepartment();
    }
    match /admins/{adminId} {
      allow read, write: if isOwner(adminId);
    }

    // --- Class & Attendance Rules ---
    match /classes/{classId} {
      // Any signed-in user can read class information.
      allow read: if isSignedIn();

      // Only teachers can create new classes.
      allow create: if isTeacher();
      
      // The teacher who owns the class can update or delete it.
      // The teacherId cannot be changed upon update.
      allow update: if isTeacher() 
                    && resource.data.teacherId == request.auth.uid
                    && request.resource.data.teacherId == resource.data.teacherId;

      allow delete: if isTeacher() && resource.data.teacherId == request.auth.uid;

      // Admins can view classes in their department.
      allow list: if isAdmin() && getAdminDepartment() == resource.data.department;

      // --- Attendance Subcollection Rules ---
      match /attendance/{date}/records/{recordId} {
        // Students can create their own attendance record.
        allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;

        // Teachers, admins, and the student owner can read records.
        allow read, list: if (isTeacher() && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid) ||
                          (isAdmin() && get(/databases/$(database)/documents/classes/$(classId)).data.department == getAdminDepartment());
      }
    }
    
    // Allow collection group query for a student to read their own records across all classes.
    match /{path=**}/records/{recordId} {
      allow read: if isStudent() && resource.data.studentId == request.auth.uid;
    }
  }
}
