rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isStudent() {
      return isSignedIn() && exists(/databases/$(database)/documents/students/$(request.auth.uid));
    }

    function isTeacher() {
      return isSignedIn() && exists(/databases/$(database)/documents/teachers/$(request.auth.uid));
    }
    
    function isAdmin() {
      return isSignedIn() && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getStudentData() {
        return get(/databases/$(database)/documents/students/$(request.auth.uid)).data;
    }
    
    function getAdminDepartment() {
        return get(/databases/$(database)/documents/admins/$(request.auth.uid)).data.department;
    }

    // Profile Rules: Users can manage their own profile.
    match /students/{studentId} {
      allow read, write: if isOwner(studentId);
    }
    match /teachers/{teacherId} {
      allow read, write: if isOwner(teacherId);
    }
    match /admins/{adminId} {
      allow read, write: if isOwner(adminId);
    }

    // Class Rules
    match /classes/{classId} {
      // Students can read classes matching their department and semester.
      allow get: if isStudent();
      // Students can list classes matching their department and semester.
      allow list: if isStudent() && request.query.where.department == getStudentData().department && request.query.where.semester == getStudentData().semester;

      // Teachers and Admins can read any class.
      allow read: if isTeacher() || isAdmin();

      // Teachers can create classes.
      allow create: if isTeacher();
      // The teacher who owns the class can update or delete it.
      allow update, delete: if isTeacher() && resource.data.teacherId == request.auth.uid;

      // Attendance Subcollection Rules
      match /attendance/{date}/records/{recordId} {
        // Students can create their own attendance record.
        allow create: if isStudent() && request.resource.data.studentId == request.auth.uid;
        
        // The teacher of the class, the student who owns the record, or an admin of the department can read a record.
        allow read: if (isTeacher() && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid) ||
                      (isStudent() && resource.data.studentId == request.auth.uid) ||
                      (isAdmin() && get(/databases/$(database)/documents/classes/$(classId)).data.department == getAdminDepartment());
      }
    }
    
    // Allow collection group query for a student's own records across all classes.
    match /{path=**}/records/{recordId} {
        allow read: if isStudent() && resource.data.studentId == request.auth.uid;
    }
  }
}
