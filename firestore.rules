rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check admin department
    function isAdminOfDepartment(department) {
      return request.auth != null && request.auth.token.department == department;
    }

    // STUDENT PROFILE
    match /students/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // TEACHER PROFILE
    match /teachers/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // ADMIN PROFILE
    match /admins/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // CLASS RULES
    match /classes/{classId} {
      // Any authenticated user can read class details (e.g., students viewing their dashboard)
      allow get, list: if request.auth != null;
      
      // Teachers can create classes
      allow create: if request.auth != null; 
      
      // Only the assigned teacher can update or delete a class
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid;

      // ATTENDANCE SUBCOLLECTION RULES
      match /attendance/{date} {
        // This allows listing records within a specific date subcollection
        allow read, list: if request.auth != null && 
                             (get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid || 
                              isAdminOfDepartment(get(/databases/$(database)/documents/classes/$(classId)).data.department));
        
        match /records/{studentId} {
          // Students can create their own attendance record.
          allow create: if request.auth != null && request.auth.uid == studentId;

          // A student can read their OWN record.
          // A teacher can read ALL records for their class.
          // An admin of the correct department can read ALL records.
          allow get: if request.auth != null && 
                      (request.auth.uid == studentId || 
                       get(/databases/$(database)/documents/classes/$(classId)).data.teacherId == request.auth.uid ||
                       isAdminOfDepartment(get(/databases/$(database)/documents/classes/$(classId)).data.department));
        }
      }
    }

    // ADMIN-SPECIFIC RULES FOR LISTING COLLECTIONS
    match /classes/{document=**} {
        allow list: if request.auth != null && isAdminOfDepartment(resource.data.department);
    }
     match /teachers/{document=**} {
        allow list: if request.auth != null && isAdminOfDepartment(resource.data.department);
    }
     match /students/{document=**} {
        allow list: if request.auth != null && isAdminOfDepartment(resource.data.department);
    }
  }
}
